.container {
  min-height: 100vh;
  background: #f8f8f8;
  padding-bottom: 120rpx;
}

/* 商品图片 */
.product-images {
  width: 100%;
  height: 750rpx;
}

.product-images image {
  width: 100%;
  height: 100%;
}

/* 商品信息 */
.product-info {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.product-header {
  margin-bottom: 20rpx;
}

.product-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.product-price-points {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.product-price {
  font-size: 48rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.product-points {
  font-size: 28rpx;
  color: #07c160;
  background: rgba(7, 193, 96, 0.1);
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
}

.product-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 30rpx;
}

/* 商品特点 */
.product-features {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.feature-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.feature-item {
  background: #f5f5f5;
  padding: 20rpx;
  border-radius: 12rpx;
}

.feature-text {
  font-size: 28rpx;
  color: #666;
}

/* 商品标签 */
.product-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag {
  font-size: 24rpx;
  color: #666;
  background: #f5f5f5;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.exchange-btn {
  background: #07c160;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  padding: 20rpx 0;
}

.exchange-btn:active {
  opacity: 0.9;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 28rpx;
} 