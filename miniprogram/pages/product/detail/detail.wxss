/* pages/product/detail/detail.wxss */
.container {
  min-height: 100vh;
  background: #f8f9fa;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
}

/* 商品图片 */
.product-images {
  width: 100%;
  height: 750rpx;
}

.product-image {
  width: 100%;
  height: 100%;
}

/* 商品信息 */
.product-info {
  margin: 20rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
}

.basic-info {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.name {
  font-size: 36rpx;
  font-weight: bold;
  color: #111827;
  flex: 1;
  margin-right: 20rpx;
}

.price-info {
  text-align: right;
}

.points {
  font-size: 48rpx;
  font-weight: bold;
  color: #4ade80;
  display: block;
}

.original {
  font-size: 24rpx;
  color: #9ca3af;
  text-decoration: line-through;
}

.stock-info {
  display: flex;
  align-items: center;
  font-size: 28rpx;
}

.stock-info .label {
  color: #6b7280;
  margin-right: 12rpx;
}

.stock-info .value {
  color: #111827;
}

/* 商品详情 */
.detail-section {
  margin: 20rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
}

.section-header {
  margin-bottom: 20rpx;
}

.section-header .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #111827;
}

.detail-content .description {
  font-size: 28rpx;
  color: #374151;
  line-height: 1.6;
  margin-bottom: 30rpx;
}

.detail-images {
  width: 100%;
}

.detail-image {
  width: 100%;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
}

.detail-image:last-child {
  margin-bottom: 0;
}

/* 兑换规则 */
.rules-section {
  margin: 20rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
}

.rules-content {
  padding: 0 20rpx;
}

.rule-item {
  margin-bottom: 24rpx;
}

.rule-item:last-child {
  margin-bottom: 0;
}

.rule-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #111827;
  margin-bottom: 8rpx;
  display: block;
}

.rule-desc {
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.5;
}

/* 底部操作栏 */
.action-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  padding: 20rpx 30rpx calc(20rpx + env(safe-area-inset-bottom));
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 -4rpx 16rpx rgba(0,0,0,0.05);
}

.user-points {
  display: flex;
  flex-direction: column;
}

.user-points .label {
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 4rpx;
}

.user-points .points {
  font-size: 36rpx;
  font-weight: bold;
  color: #4ade80;
}

.exchange-btn {
  background: #4ade80;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  padding: 20rpx 60rpx;
  border-radius: 16rpx;
  border: none;
}

.exchange-btn.disabled {
  background: #9ca3af;
  opacity: 0.5;
}