/* pages/dev-tools/index.wxss */
.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  margin-bottom: 30rpx;
  text-align: center;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.content {
  width: 100%;
}

.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
  border-bottom: 1px solid #eee;
  padding-bottom: 16rpx;
}

.card-content {
  padding: 10rpx 0;
}

.env-id {
  font-size: 28rpx;
  color: #666;
  word-break: break-all;
}

.switch-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.tips {
  font-size: 24rpx;
  color: #999;
}

.function-selector {
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.function-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 10rpx;
}

.function-button {
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  background-color: #eee;
  border-radius: 8rpx;
  color: #666;
}

.function-button.active {
  background-color: #4ade80;
  color: white;
}

.input-container {
  margin-bottom: 20rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 1px solid #eee;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.textarea {
  width: 100%;
  height: 200rpx;
  border: 1px solid #eee;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.action-button {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #4ade80;
  color: white;
  border-radius: 8rpx;
  margin: 20rpx 0;
  font-size: 28rpx;
}

.result-box, .error-box {
  width: 100%;
  min-height: 200rpx;
  border: 1px solid #eee;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  word-break: break-all;
  white-space: pre-wrap;
  font-family: monospace;
}

.result-box {
  background-color: #f0f8ff;
  color: #333;
}

.error-box {
  background-color: #fff0f0;
  color: #ff6666;
} 