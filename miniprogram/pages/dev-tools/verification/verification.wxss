/* pages/dev-tools/verification/verification.wxss */
.container {
  padding: 32rpx;
}

.header {
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #111827;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #6b7280;
}

.verification-section {
  background-color: white;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 32rpx;
}

.input-group {
  display: flex;
  margin-bottom: 24rpx;
}

.verification-input {
  flex: 1;
  height: 80rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
}

.scan-btn {
  width: 160rpx;
  height: 80rpx;
  background-color: #4b5563;
  color: white;
  font-size: 28rpx;
  margin-left: 16rpx;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.scan-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.verify-btn {
  width: 100%;
  height: 88rpx;
  background-color: #4ade80;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 8rpx;
}

.result-section {
  margin-bottom: 32rpx;
}

.result-card {
  background-color: white;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.result-card.success {
  border-top: 8rpx solid #4ade80;
}

.result-card.error {
  border-top: 8rpx solid #ef4444;
}

.result-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.result-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background-color: #f3f4f6;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
}

.result-status-icon {
  width: 40rpx;
  height: 40rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #111827;
}

.result-content {
  margin-bottom: 24rpx;
}

.product-info {
  display: flex;
  padding: 16rpx;
  background-color: #f9fafb;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
}

.product-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.product-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #111827;
  margin-bottom: 8rpx;
}

.product-points {
  font-size: 24rpx;
  color: #4ade80;
}

.verification-info {
  padding: 16rpx;
  background-color: #f9fafb;
  border-radius: 8rpx;
}

.info-item {
  display: flex;
  margin-bottom: 8rpx;
}

.info-label {
  width: 160rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.info-value {
  flex: 1;
  font-size: 24rpx;
  color: #111827;
}

.error-message {
  padding: 24rpx;
  background-color: #fee2e2;
  color: #b91c1c;
  border-radius: 8rpx;
  font-size: 28rpx;
  margin-bottom: 24rpx;
}

.reset-btn {
  width: 100%;
  height: 80rpx;
  background-color: #f3f4f6;
  color: #4b5563;
  font-size: 28rpx;
  border-radius: 8rpx;
}

.tips-section {
  background-color: white;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.tips-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #111827;
  margin-bottom: 16rpx;
}

.tips-content {
  padding: 16rpx;
  background-color: #f9fafb;
  border-radius: 8rpx;
}

.tip-item {
  font-size: 24rpx;
  color: #4b5563;
  margin-bottom: 8rpx;
  line-height: 1.5;
} 