/* pages/login/login.wxss */
.container {
  min-height: 100vh;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  background: #f8f9fa;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.features {
  display: flex;
  justify-content: space-around;
  margin-bottom: 80rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.feature-icon {
  font-size: 64rpx;
  margin-bottom: 20rpx;
}

.feature-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.feature-desc {
  font-size: 24rpx;
  color: #666;
}

.actions {
  padding: 0 40rpx;
}

.login-btn {
  width: 100% !important;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  margin-bottom: 30rpx;
  background: #07c160;
  border-radius: 44rpx;
}

.login-btn.loading {
  opacity: 0.8;
}

.back-btn {
  width: 100% !important;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  color: #666;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 44rpx;
}

.footer {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
}

.tips {
  font-size: 24rpx;
  color: #999;
}

.link {
  font-size: 24rpx;
  color: #07c160;
  margin: 0 10rpx;
}

/* 登录页面样式 */
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #4ade80 0%, #22c55e 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
}

/* 头部区域 */
.login-header {
  text-align: center;
  margin-bottom: 80rpx;
}

.logo-text {
  display: block;
  font-size: 64rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 30rpx;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  letter-spacing: 4rpx;
}

.app-slogan {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 登录内容 */
.login-content {
  background-color: white;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  width: 100%;
  max-width: 600rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 60rpx;
}

.welcome-text {
  text-align: center;
  margin-bottom: 60rpx;
}

.welcome-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #111827;
  margin-bottom: 16rpx;
}

.welcome-desc {
  display: block;
  font-size: 28rpx;
  color: #6b7280;
}

/* 登录表单 */
.login-form {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-btn {
  width: 100% !important;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  margin-bottom: 30rpx;
  background: #4ade80;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.login-btn::after {
  border: none;
}

.login-btn:active {
  transform: translateY(2rpx);
}

.login-icon {
  font-size: 32rpx;
}

.login-tips {
  font-size: 24rpx;
  color: #9ca3af;
  text-align: center;
  line-height: 1.5;
}

/* 功能介绍 */
.features {
  display: flex;
  justify-content: space-around;
  width: 100%;
  max-width: 600rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: white;
}

.feature-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.feature-text {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 授权弹窗 */
.auth-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  background-color: white;
  border-radius: 24rpx;
  padding: 0;
  width: 100%;
  max-width: 560rpx;
  position: relative;
  z-index: 1001;
}

.modal-header {
  padding: 40rpx 40rpx 20rpx;
  text-align: center;
  border-bottom: 1rpx solid #f3f4f6;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #111827;
}

.modal-body {
  padding: 40rpx;
}

.auth-desc {
  font-size: 28rpx;
  color: #6b7280;
  text-align: center;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.auth-items {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.auth-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.auth-icon {
  font-size: 36rpx;
  width: 60rpx;
  text-align: center;
}

.auth-text {
  font-size: 28rpx;
  color: #374151;
  flex: 1;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #f3f4f6;
}

.modal-btn {
  flex: 1;
  height: 88rpx;
  border: none;
  border-radius: 0;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-btn::after {
  border: none;
}

.modal-btn.cancel {
  background-color: #f9fafb;
  color: #6b7280;
  border-bottom-left-radius: 24rpx;
}

.modal-btn.confirm {
  background-color: #4ade80;
  color: white;
  border-bottom-right-radius: 24rpx;
}

.modal-btn.cancel:active {
  background-color: #f3f4f6;
}

.modal-btn.confirm:active {
  background-color: #22c55e;
} 